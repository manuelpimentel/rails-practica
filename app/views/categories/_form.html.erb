<%= form_for(category) do |f| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre, :class=>"control-label col-lg-4" %>
    <%= f.text_field :nombre, :placeholder=>"Nombre", :class=>"form-control" %>
  </div>

  <div class="field">
    <%= f.label :descripcion, :class=>"control-label col-lg-4" %>
    <%= f.text_field :descripcion, :placeholder=>"Descripcion", :class=>"form-control" %>
  </div>

  <br>

  <div class="actions row">
    <%= f.submit :class => "btn text-muted text-center btn-success"%>
    <%= link_to 'Regresar', categories_path, :class => "btn text-muted text-center btn-danger" %>
  </div>
<% end %>